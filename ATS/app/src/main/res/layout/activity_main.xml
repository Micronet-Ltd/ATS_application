<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serial Number"
        android:id="@+id/textSerial"
        android:layout_alignParentLeft="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status 1"
        android:id="@+id/textStatus"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status 2"
        android:id="@+id/textStatus2"
        android:layout_below="@+id/textStatus"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status 3"
        android:id="@+id/textStatus3"
        android:layout_below="@+id/textStatus2"

        android:layout_alignParentLeft="true"
        android:textSize="50sp"
        android:textColor="#800000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status 4"
        android:id="@+id/textStatus4"
        android:layout_below="@+id/textStatus3"

        android:layout_alignParentLeft="true"
        android:textSize="50sp"
        android:textColor="#000080"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status 5"
        android:id="@+id/textStatus5"
        android:layout_below="@+id/textStatus4"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStatus4"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/gridLayout">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Override Inputs"
            android:id="@+id/checkBoxOverride"
            android:checked="false"
            android:layout_alignParentLeft="true"

            android:layout_row="0"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ignition"
            android:id="@+id/checkBoxIgnition"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 1"
            android:id="@+id/checkBoxInput1"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 2"
            android:id="@+id/checkBoxInput2"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="3" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 3"
            android:id="@+id/checkBoxInput3"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="4" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 4"
            android:id="@+id/checkBoxInput4"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="5" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 5"
            android:id="@+id/checkBoxInput5"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="6" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input 6"
            android:id="@+id/checkBoxInput6"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:layout_row="0"
            android:layout_column="7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Volts:"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextVolts"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:id="@+id/buttonVoltage"
            android:layout_alignParentLeft="true"
            android:layout_row="1"
            android:layout_column="2" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:text="Log"
        android:id="@+id/textLog"
        android:scrollbars = "vertical"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/gridLayout"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
