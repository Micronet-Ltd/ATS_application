<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TestRTC Application"
        android:id="@+id/textTitleView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:text="# Boots"
        android:id="@+id/textBootsView"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="0dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:text="000"
        android:id="@+id/textNumBoots"
        android:layout_alignTop="@+id/textBootsView"
        android:layout_toRightOf="@+id/textPowerUpView"
        android:layout_toEndOf="@+id/textPowerUpView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Power Down:"
        android:id="@+id/textPowerDownView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textPowerDown"
        android:text="PD"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/textNumBoots"
        android:layout_toEndOf="@+id/textNumBoots" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Power Up:"
        android:id="@+id/textPowerUpView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textPowerUp"
        android:text="PU"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/textPowerUpView"
        android:layout_toEndOf="@+id/textPowerUpView" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Counters"
        android:id="@+id/resetButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop and Exit"
        android:id="@+id/shutdownButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
         />

</RelativeLayout>
